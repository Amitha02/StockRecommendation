@model IEnumerable<IEXTrading.Models.Company>
@{
    ViewData["Title"] = "Symbols";
    int slNo = 0;
}

<h2 style="width:400px; float:left;">Symbols</h2>
<div class="save">
    <a id="dboptTop" asp-controller="Home" asp-action="PopulateSymbols" class="btn">Save Data</a>
</div>
<hr />
<table class="table">
    <thead>
        <tr>
            <th style="width:1%;">
                Sl. No.
            </th>
            <th style="width:15%;">
                Symbol
            </th>
            <th style="width:60%;">
                Name
            </th>
            <th style="width:10%;">
                Date
            </th>
            <th style="width:14%;">
                Type
            </th>
        </tr>
        <tr>
            <td colspan="5" style="padding:0;"><hr /></td>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            { 
                slNo++;
            }
            
        <tr>
            <td style="width:1%;">
                @slNo
            </td>
            <td style="width:15%;">
                @Html.DisplayFor(modelItem => item.symbol)
            </td>
            <td style="width:60%;">
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td style="width:10%;">
                @Html.DisplayFor(modelItem => item.date)
            </td>
            <td style="width:14%;">
                @Html.DisplayFor(modelItem => item.type)
            </td>
        </tr>
        }
        <tr>
            <td>
                <a id="dbopt" asp-controller="Home" asp-action="PopulateSymbols" class="btn" style="float:left;">Save Data</a>
            </td>
        </tr>
    </tbody>
</table>
<script>
    alertDbSave(@ViewBag.dbSuccessComp);
</script>
